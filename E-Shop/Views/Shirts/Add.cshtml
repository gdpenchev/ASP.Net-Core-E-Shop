@model AddShirtFormModel

    <div class="container">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Quantity">Quantity</label>
                    <input asp-for="Quantity" class="form-control" placeholder="How many items?">
                    <span asp-validation-for="Quantity" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control" placeholder="How much do I cost?">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Size"></label>
                    <select asp-for="Size" class="form-control">
                        <option>SM</option>
                        <option>MD</option>
                        <option>LG</option>
                        <option>XL</option>
                        <option>XXL</option>
                        <span asp-validation-for="Size" class="small text-danger"></span>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="MasterShirtId"></label>
                    <select asp-for="MasterShirtId" class="form-control">
                        @foreach (var ms in Model.MasterShirts)
                        {
                            <option value="@ms.Id">@ms.Name</option>
                        }
                        <span asp-validation-for="MasterShirtId" class="small text-danger"></span>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
