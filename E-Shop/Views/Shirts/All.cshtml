@model AllShirtsModel 

@{ 
    ViewData["Title"] = "All Goods";
}

<form method="get">
    <div class="row mb-5">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Size"></label>
                <select asp-for="Size" class="form-control">
                    <option value="">All</option>
                    @foreach (var size in Model.Sizes)
                    {
                        <option>@size</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Cateogory"></label>
                <select asp-for="Cateogory" class="form-control">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option>@category</option>
                    }
                </select>
            </div>
        </div>
                <div class="form-group col-md-4">
                    <label asp-for="SearchByText"></label>
                    <input asp-for="SearchByText" class="form-control" placeholder="Looking for an item?">
                    <input type="submit" class="btn btn-primary"
                </div>
        </div>
</form>
@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }
    var lastPage = Math.Ceiling((double)Model.TotalShirts / AllShirtsModel.ShirtPerPage);
}
<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Shirts"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-size="@Model.Size"
           asp-route-category="@Model.Cateogory"
           asp-route-searchByText="@Model.SearchByText">Previous</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == lastPage ? "disabled" : string.Empty)"
           asp-controller="Shirts"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-size="@Model.Size"
           asp-route-category="@Model.Cateogory"
           asp-route-searchbyText="@Model.SearchByText">Next</a>
    </div>
</div>

@if(!Model.Shirts.Any())
{
    <h2 class="text-center">Nothing to display...</h2>
}
<div class="row">
    @foreach(var shirt in Model.Shirts)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@shirt.ImageUrl" alt="@shirt.Name @shirt.Model - @shirt.Price (@shirt.Category)">
                <div class="card-body">
                    <h5 class="card-title text-center">@shirt.Name @shirt.Model @shirt.Price (@shirt.Category)</h5>
                    <a asp-controller="Shirts" asp-action="Details" asp-route-id="@shirt.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>